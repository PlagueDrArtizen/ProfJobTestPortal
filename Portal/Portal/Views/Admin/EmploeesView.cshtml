@model IEnumerable<Portal.Models.EmploeeViewModel>

@{
    ViewBag.Title = "EmploeesView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Сотрудники</h2>


<table class="table">
    <tr>
        <th>
            Табельный номер
        </th>
        <th>
            Количество пройденых тестов
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TabelNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PastTestCount)
        </td>
        <td>
            @Html.ActionLink("Детали", "UserTestsHistory", "Tests", new { tabelNumber = item.TabelNumber }, null)
        </td>
    </tr>
}

</table>

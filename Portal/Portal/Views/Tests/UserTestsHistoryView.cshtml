@model IEnumerable<Portal.Models.TestResultViewModel>

@{
    ViewBag.Title = "UserTestsHistoryView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    Результаты тестов сотрудникa @User.Identity.Name
</h2>

<table class="table">
    <tr>
        <th>
            Дата прохождения
        </th>
        <th>
            Тест
        </th>
        <th>
            Название на момент прохождения
        </th>        
        <th>
            Результат
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TestName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalTestName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.ActionLink("Детально", "TestResult", new { testResultId = item.TestId })
        </td>
    </tr>
}

</table>
